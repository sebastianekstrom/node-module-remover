{
  "compilerOptions": {
    "rootDir": "./",
    "outDir": "./dist",
    "strict": true,
    "target": "ES2019",
    "module": "commonjs",
    "sourceMap": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "types": ["node"],
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*",
    "tooling/**/*",
    "tooling/generateMockFiles.ts",
    "vitest.config.ts"
  ]
}
